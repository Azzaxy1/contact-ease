<div class="row mt-4 fullscreen">
  <div class="col-md-6">
    <h2>Form Ubah Data Contact</h2>
    <% if (typeof errors !="undefined" ) { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(error=> { %>
            <li>
              <%= error.msg %>
            </li>
            <% }) %>
        </ul>
      </div>
      <% } %>
        <form method="post" action="/contact/update">
          <input type="hidden" name="oldNama" value="<%= contact.oldNama || contact.nama %>">
          <div class="mb-3">
            <label for="nama" class="form-label">Nama</label>
            <input type="text" class="form-control" value="<%= contact.nama %>" id="nama" name="nama">
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" value="<%= contact.email %>" id="email" name="email" required>
          </div>
          <div class="mb-3">
            <label for="nohp" class="form-label">No HandPhone</label>
            <input type="text" class="form-control" value="<%= contact.nohp %>" id="nohp" name="nohp" required>
          </div>
          <button type="submit" class="btn btn-primary">Ubah Data Contact</button>
        </form>
  </div>
</div>